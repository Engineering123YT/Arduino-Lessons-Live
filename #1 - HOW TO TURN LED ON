const int RedLED = 8;  // pin8 = RedLED

// put your setup code here, to run once:
void setup() {
pinMode(RedLED,OUTPUT);  //RedLED (or pin8) is defined as an output
}

// put your main code here, to run repeatedly:
void loop() {
digitalWrite(RedLED,HIGH);  //RedLED (or pin8) is given a digital command, HIGH.
//                            HIGH means ON
//                            LOW means OFF
delay(1000);  //delay void loop by 1000 miliseconds (1 second)
}
